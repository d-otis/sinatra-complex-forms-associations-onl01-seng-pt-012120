<h1><%=@owner.name%></h1>
<% if !@owner.pets.empty? %>
	<h4>Pets:</h4>
	<ul>
	  <%@owner.pets.each do |pet|%>
	  <li><%=pet.name%></li>
	  <%end%>
	</ul>
	<% else %>
		<div class="alert alert-danger">
			<%= @owner.name %> has no pets
		</div>
<% end %>


<p><a href="/owners/<%= @owner.id %>/edit" class="btn btn-secondary">edit</a></p>
<p><a href="/owners" class="btn btn-secondary">owners</a></p>
<a href="/pets" class="btn btn-secondary">pets</a>